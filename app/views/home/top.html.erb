<% unless user_signed_in? %>
  <div class="px-4 py-20 text-center">
    <span class="block mx-auto mb-6 text-4xl font-bold">MyApp</span>
    
    <h1 class="text-5xl font-bold text-gray-900 mb-6">
      ゲーム時間をスマートに
    </h1>
    
    <div class="max-w-2xl mx-auto">
      <p class="text-xl text-gray-600 mb-8">
        適切なタイミングでのプレイ終了をサポート。
      </p>
      
      <div class="flex justify-center">
        <%= link_to "ログイン", new_user_session_path, 
            class: "px-8 py-3 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition text-lg font-semibold" %>
      </div>
    </div>
  </div>
<% end %>

